<h2>Register</h2>
<div class="cls-content">
    <div class="cls-content-sm panel">
	    <div class="panel-body">
		    <p  class="pad-btm">Enter your credentials:</p>
        <form {{action 'register' on='submit'}}><div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-user"></i>
                        </div>
                        {{~input id='email' class="form-control" type="text" placeholder='Enter email' value=username ~}}
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-user"></i>
                        </div>
                        {{~input id='password1' class="form-control" type="password" placeholder='Enter password' value=password1~}}
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-user"></i>
                        </div>
                        {{~input id='password2' class="form-control" type="password" placeholder='Re-enter password' value=password2~}}
                    </div>
                </div>
                <div class="row">
							      <div class="col-xs-8 text-left checkbox">
    				    		</div>
    						    <div class="col-xs-4">
    								    <div class="form-group text-right">
            								<button class="btn btn-success text-uppercase" type="submit">Register</button>
           							</div>
    							  </div>
    						</div>
                {{~#if error}}
                     <p>
                        {{error}}
                    </p>
                {{/if~}}
            </form>
        </div>
    </div>
</div>
{{#if errorMessage}}
  <p>
      <strong>Register failed:</strong>
      <code>{{errorMessage}}</code>
  </p>
{{/if}}
